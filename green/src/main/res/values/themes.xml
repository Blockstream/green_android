<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Base theme, all common styling here-->
    <style name="Base.Green" parent="@style/Theme.Material3.Dark.NoActionBar">
        <!--Material type attributes-->

        <item name="textAppearanceDisplayLarge">@style/TextAppearance.Green.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.Green.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.Green.DisplaySmall</item>

        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Green.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Green.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Green.HeadlineSmall</item>

        <item name="textAppearanceTitleLarge">@style/TextAppearance.Green.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Green.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.Green.TitleSmall</item>

        <item name="textAppearanceBodyLarge">@style/TextAppearance.Green.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Green.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Green.BodySmall</item>

        <item name="textAppearanceLabelLarge">@style/TextAppearance.Green.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.Green.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.Green.LabelSmall</item>

        <item name="textAppearanceOverline">@style/TextAppearance.Green.Overline</item>

        <!--        Deprecated -->
<!--        <item name="textAppearanceButton">@style/TextAppearance.Green.Button</item>-->
        <!--   Deprecated End-->

        <item name="android:textColor">@color/color_on_surface_emphasis_high</item>
        <item name="android:textColorPrimary">@color/color_on_surface_emphasis_high</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Green.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Green.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Green.LargeComponent</item>

        <item name="emphasisHighAlpha">1.00</item>
        <item name="emphasisMediumAlpha">0.74</item>
        <item name="emphasisLowAlpha">0.54</item>
        <item name="emphasisDisabledAlpha">0.38</item>
        <item name="emphasisDividerAlpha">0.20</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!--Platform attributes-->
        <item name="android:navigationBarColor">@color/brand_background</item>
        <item name="android:statusBarColor">@color/brand_background</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item> <!-- Make the status bar aware of our dark theme  -->
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@null</item><!-- Remove the divider   -->
        <item name="popupMenuBackground">@color/md_theme_dark_surface</item>

        <!-- <item name="android:windowTranslucentStatus">true</item>-->
        <!-- <item name="android:windowTranslucentNavigation">true</item>-->

        <!--    Disable Elevation Overlay    -->
        <item name="elevationOverlayEnabled">false</item>

        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Green.MaterialAlertDialog</item>
        <item name="navigationViewStyle">@style/Widget.Material3.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.Green.Toolbar</item>
        <item name="materialCardViewStyle">@style/Widget.Green.MaterialCardView</item>
        <item name="cardViewStyle">@style/Widget.Green.MaterialCardView</item>
        <item name="textInputStyle">@style/Widget.Green.TextInputLayout.OutlinedBox</item>
        <item name="textInputFilledStyle">@style/Widget.Green.TextInputLayout.FilledBox</item>
        <item name="textInputFilledDenseStyle">@style/Widget.Green.TextInputLayout.FilledBox</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Green.BottomSheetDialog</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.Green.CircularProgressIndicator</item>
        <item name="linearProgressIndicatorStyle">@style/Widget.Green.LinearProgressIndicator</item>
        <item name="snackbarStyle">@style/Widget.Green.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.Green.SnackbarTextView</item>
        <item name="snackbarButtonStyle">@style/Widget.Green.SnackbarButton</item>
        <item name="materialSwitchStyle">@style/Widget.Green.Switch</item>
        <item name="borderlessButtonStyle">@style/Widget.Green.Button.Text</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Green.Button.Outlined</item>
        <item name="materialButtonStyle">@style/Widget.Green.Button</item>
        <item name="tabStyle">@style/Widget.Green.TabLayout</item>
    </style>

