        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="MaterialImportantAlertDialog.Green.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialImportantAlertDialog.Green.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
