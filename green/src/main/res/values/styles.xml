        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">22sp</item>
        <item name="backgroundTint">@color/brand_surface_light</item>
        <item name="android:background">@drawable/recovery_phrase_keyboard_background</item>
    </style>

    <style name="TextShadow">
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="GreenPinViewDigit">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/pin_textsize</item>
        <item name="android:fontFamily">monospace</item>
        <item name="fontFamily">monospace</item>
