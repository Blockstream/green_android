<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.blockstream.common.gdk.data.Transaction" />

        <variable
            name="tx"
            type="com.blockstream.common.gdk.data.Transaction" />

        <variable
            name="date"
            type="String" />

        <variable
            name="confirmations"
            type="Integer" />

        <variable
            name="confirmationsRequired"
            type="Integer" />

        <variable
            name="canRBF"
            type="Boolean" />

        <variable
            name="spvEnabled"
            type="Boolean" />

        <variable
            name="spvInProgress"
            type="Boolean" />

        <variable
            name="spvFailed"
            type="Boolean" />

        <variable
            name="isRefundableSwap"
            type="Boolean" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonIncreaseFee"
            isVisible="@{canRBF}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:drawableEnd="@drawable/ic_baseline_double_arrow_24"
            android:text="@string/id_increase_fee" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            android:text="@string/id_transaction_status"
            style="@style/TextAppearance.Green.Overline" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress"
                    indeterminate="@{confirmations == 0 || (confirmations >= confirmationsRequired &amp;&amp; spvInProgress) || tx.pendingCloseChannel}"
                    isInvisible="@{spvFailed || isRefundableSwap}"
                    progress="@{Math.min(confirmations, confirmationsRequired)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="10dp"
                    android:max="@{confirmationsRequired}"
                    app:indicatorSize="45dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:progress="75" />

                <ImageView
                    android:id="@+id/failed"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_x_circle"
                    isVisible="@{isRefundableSwap}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/error" />

                <ImageView
                    android:id="@+id/tick"
                    isVisible="@{confirmations >= confirmationsRequired &amp;&amp; spvEnabled == false &amp;&amp; !tx.pendingCloseChannel &amp;&amp; !isRefundableSwap}"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_progress_check"
                    app:layout_constraintBottom_toBottomOf="@+id/progress"
                    app:layout_constraintEnd_toEndOf="@+id/progress"
                    app:layout_constraintStart_toStartOf="@+id/progress"
                    app:layout_constraintTop_toTopOf="@+id/progress"
                    tools:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/spv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/spv_in_progress"
                    isVisible="@{confirmations >= confirmationsRequired &amp;&amp; spvEnabled &amp;&amp; isRefundableSwap}"
                    app:layout_constraintBottom_toBottomOf="@+id/progress"
                    app:layout_constraintEnd_toEndOf="@+id/progress"
                    app:layout_constraintStart_toStartOf="@+id/progress"
                    app:layout_constraintTop_toTopOf="@+id/progress" />

                <TextView
                    isVisible="@{confirmations &lt; confirmationsRequired}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@{confirmations + `/` + confirmationsRequired}"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    app:layout_constraintBottom_toBottomOf="@+id/progress"
                    app:layout_constraintEnd_toEndOf="@+id/progress"
                    app:layout_constraintStart_toStartOf="@+id/progress"
                    app:layout_constraintTop_toTopOf="@+id/progress"
                    tools:text="1/6"
                    tools:visibility="gone" />

                <TextView
                    android:id="@+id/dateView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:includeFontPadding="false"
                    android:text="@{date}"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    app:layout_constraintBottom_toTopOf="@+id/status"
                    app:layout_constraintEnd_toStartOf="@+id/progress"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/progress"
                    app:layout_constraintVertical_chainStyle="spread"
                    tools:text="Jun 22, 2018 - 22:22:22" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:includeFontPadding="false"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    app:layout_constraintBottom_toBottomOf="@+id/progress"
                    app:layout_constraintEnd_toStartOf="@+id/progress"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateView"
                    tools:text="Pending Confirmation" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>