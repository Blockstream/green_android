<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="18dp"
                android:paddingBottom="18dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Transactions"
                    android:textAppearance="@style/TextAppearance.Green.Body1"
                    android:textStyle="bold"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="18dp"
                    />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Subtitle"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="18dp"
                    />


            </LinearLayout>

            <ImageView
                android:id="@+id/icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_right_60"
                app:tint="@color/color_on_surface_emphasis_low" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="end|center"
                android:orientation="vertical">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchMaterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:enabled="false"
                    android:clickable="false"
                    tools:visibility="gone"
                    app:thumbTint="@color/switch_thumb"
                    app:useMaterialThemeColors="false" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radionMaterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:enabled="false"
                    android:clickable="false"
                    tools:visibility="gone"
                    app:buttonTint="@color/radio_tint"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button"
                    style="@style/Widget.Green.Button.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/id_change"
                    android:textSize="12sp"
                    tools:visibility="gone"
                    app:textAllCaps="true" />


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>