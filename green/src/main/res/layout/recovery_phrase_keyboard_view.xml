            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="q" />

        <com.google.android.material.button.MaterialButton
            style="@style/RecoveryPhraseKeyboardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="w" />

        <com.google.android.material.button.MaterialButton
            style="@style/RecoveryPhraseKeyboardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="e" />

        <com.google.android.material.button.MaterialButton
            style="@style/RecoveryPhraseKeyboardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="r" />

        <com.google.android.material.button.MaterialButton
            style="@style/RecoveryPhraseKeyboardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="t" />

        <com.google.android.material.button.MaterialButton
            style="@style/RecoveryPhraseKeyboardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
