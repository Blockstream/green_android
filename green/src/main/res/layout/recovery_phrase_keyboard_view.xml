            style="@style/RecoveryPhraseKeyboardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="u" />

        <com.google.android.material.button.MaterialButton
            style="@style/RecoveryPhraseKeyboardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="i" />

        <com.google.android.material.button.MaterialButton
            style="@style/RecoveryPhraseKeyboardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="o" />

        <com.google.android.material.button.MaterialButton
            style="@style/RecoveryPhraseKeyboardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
