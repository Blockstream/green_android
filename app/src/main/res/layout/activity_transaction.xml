<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.greenaddress.greenbits.ui.TransactionActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txDateText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_light"
                android:textSize="18sp"
                android:gravity="center"
                android:textIsSelectable="true" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <RelativeLayout
                android:id="@+id/status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                >
                <TextView
                    android:id="@+id/txUnconfirmedText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/status_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/activity_vertical_margin"
                    android:layout_toRightOf="@id/txUnconfirmedText"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_done"/>
                <TextView
                    android:id="@+id/status_increase_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxWidth="120dp"
                    android:inputType="textMultiLine"
                    android:layout_centerVertical="true"
                    android:singleLine="false"
                    android:maxLines="2"
                    android:layout_alignParentEnd="true"
                    android:text="@string/id_increase_fee"
                    android:textColor="@color/secondaryTextColor"
                    android:background="@drawable/material_button_increase_fee"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:drawablePadding="4dp"
                    android:drawableEnd="@drawable/ic_bump_fee"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_vertical_margin">



                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_vertical_margin" />

                <TextView
                    android:id="@+id/txDoubleSpentByTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SectionTitle"
                    android:text="@string/id_double_spend_by" />

                <TextView
                    android:id="@+id/txDoubleSpentByText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textIsSelectable="true" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/txRecipientReceiverView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/txRecipientTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SectionTitle"
                    android:text="@string/id_recipient" />

                <TextView
                    android:id="@+id/txRecipientText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textIsSelectable="true" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_vertical_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SectionTitle"
                    android:text="@string/id_amount" />


                <TextView
                    android:id="@+id/txAmountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textIsSelectable="true" />


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_vertical_margin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SectionTitle"
                    android:text="@string/id_fee_amount_size_fee_rate" />

                <TextView
                    android:id="@+id/txFeeInfoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textIsSelectable="true" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_vertical_margin" />

                <TextView
                    android:id="@+id/txReceivedOnTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SectionTitle"
                    android:text="@string/id_received_on" />

                <TextView
                    android:id="@+id/txReceivedOnText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/cardview"
                    android:height="40dp"
                    android:paddingStart="15dp"
                    android:textColor="@color/white"
                    />


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_vertical_margin" />

                <TextView
                    android:id="@+id/txUnconfirmedEstimatedBlocks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SectionTitle"
                    android:text="@string/id_estimated_blocks_until" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_vertical_margin">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_vertical_margin" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txMemoTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/SectionTitle"
                        android:text="@string/id_my_notes" />

                    <TextView
                        android:id="@+id/txMemoSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/id_save"
                        android:textColor="@color/green_dark"
                        android:textAllCaps="true"
                        android:visibility="gone"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <EditText
                    android:id="@+id/txMemoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textNoSuggestions|textVisiblePassword"
                    android:textColor="@color/textColor"
                    android:maxLength="1024"
                    android:background="@drawable/textbox"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_vertical_margin">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_vertical_margin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SectionTitle"
                    android:text="@string/id_hash" />

                <TextView
                    android:id="@+id/txHashText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textIsSelectable="true" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/txExplorer"
        style="@style/gradientButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/id_view_in_explorer"
        android:layout_margin="@dimen/activity_vertical_margin"/>

</LinearLayout>
