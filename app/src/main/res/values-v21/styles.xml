<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimaryDark">@color/windowBackground</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/windowBackground</item>
        <item name="colorBackgroundFloating">@color/buttonJungleGreen</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:colorButtonNormal">@color/accent</item>
        <item name="android:itemBackground">@color/buttonJungleGreen</item>
        <item name="materialFeeButtonSelected">@drawable/fee_button_selected</item>
        <item name="materialFeeButtonUnSelected">@drawable/fee_button_unselected</item>
    </style>

    <style name="gradientButton" parent="AppTheme.Button">
        <item name="android:background">?attr/materialButton</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="borderButton" parent="AppTheme.Button">
        <item name="android:background">?attr/materialButtonBorder</item>
        <item name="android:textColor">?attr/materialButtonBorderText</item>
    </style>

    <style name="selectionButton" parent="AppTheme.Button">
        <item name="android:background">?attr/materialButtonSelection</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="qrBg" parent="AppTheme.Base">
        <item name="android:background">?attr/qrBg</item>
    </style>

    <style name="currencyButton" parent="AppTheme.Button">
        <item name="android:background">?attr/materialButtonSelection</item>
    </style>

    <style name="nextButton" parent="AppTheme.Button">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:background">@drawable/material_button</item>
        <item name="android:drawableEnd">@drawable/ic_next</item>
        <!-- Negative padding matching the width of ic_next -->
        <item name="android:drawablePadding">-48dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="copyButton" parent="AppTheme.Button">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:background">@drawable/material_button</item>
        <item name="android:drawableEnd">@drawable/ic_baseline_file_copy_24</item>
        <!-- Negative padding matching the width of ic_next -->
        <item name="android:drawablePadding">-48dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>


    <style name="pinKeyboardView">
        <item name="android:keyBackground">?attr/materialButtonKeyboard</item>
    </style>

    <style name="materialFeeButtonSelected">
        <item name="android:background">?attr/materialFeeButtonSelected</item>
    </style>
</resources>
